    int lengthOfLongestAP(vector<int>& arr) {
        int n = arr.size();
        int maxi = 1;
        vector<vector<int>> dp(n,vector<int>(arr[n-1]-arr[0]+1, 0));
        for(int i=0;i<n;i++){
            for(int j=i-1;j>=0;j--){
                int diff = arr[i]-arr[j];
                if(dp[j][diff] == 0) dp[i][diff] = 2;
                else dp[i][diff] = dp[j][diff] +1;
                maxi = max(maxi, dp[i][diff]);
            }
        }
        return maxi;
    }
